extends layout 

block content
  script.
    
    var signInAM = function() {
      var form = document.createElement('form');
      form.setAttribute('method', 'POST');
      form.setAttribute('action', '/AMSignIn');

      document.body.appendChild(form);
      form.submit();
    }
    
    var signInSF = function() {
      var form = document.createElement('form');
      form.setAttribute('method', 'POST');
      form.setAttribute('action', '/SFSignIn');

      document.body.appendChild(form);
      form.submit();
    }

  h1= title
  div
      button(type='button', onClick='signInAM()')=appleMusicSignIn
      button(type='button', onClick='signInSF()')=spotifySignIn